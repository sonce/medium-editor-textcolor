{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "commonJS",
        // "removeComments": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        // "listEmittedFiles": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "outDir": "dist/lib",
        "baseUrl": ".",
        "typeRoots": [
            "./custom_typings",
            "./node_modules/@types"
        ]
        // "types": ["utility"]
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules"
    ]
}
